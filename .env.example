# Database Configuration
DATABASE_URL="file:./dev.db"

# Binance API Configuration
BINANCE_API_URL="https://api.binance.com"

# API keys are OPTIONAL - only needed for private account endpoints
# Public price data (klines, ticker, etc.) works without authentication
# BINANCE_API_KEY="your-api-key-here"
# BINANCE_API_SECRET="your-api-secret-here"

# Alpha Vantage API Configuration
ALPHA_VANTAGE_API_URL="https://www.alphavantage.co"
# Get your free API key at https://www.alphavantage.co/support/#api-key
# ALPHA_VANTAGE_API_KEY="your-alpha-vantage-api-key-here"

# Alpha Vantage Rate Limiting (Free tier: 5 calls/minute, 500 calls/day)
ALPHA_VANTAGE_RATE_LIMIT_MAX=5
ALPHA_VANTAGE_RATE_LIMIT_MINUTES=1

# Logging Configuration
LOG_LEVEL="info"
LOG_FORMAT="pretty"

# Monitor Configuration
# Cron expression: */5 * * * * = every 5 minutes
MONITOR_INTERVAL="*/5 * * * *"
ASSETS="BTCUSDT,ETHUSDT,BNBUSDT"
TIMEFRAMES="15m,1h,4h"

# Rate Limiting
# Public endpoints: up to 1200 requests per minute
# Authenticated endpoints: varies by endpoint weight
RATE_LIMIT_MAX=1200
RATE_LIMIT_MINUTES=1

# Strategy Parameters
RSI_PERIOD=14
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9
VOLUME_THRESHOLD=1.5

# Alert Configuration
ALERTS_ENABLED=true
ALERT_CONSOLE=true

# Webhook Configuration (optional)
# WEBHOOK_URL="https://your-webhook-url.com/endpoint"

# Email Configuration (optional)
# EMAIL_FROM="alerts@yourservice.com"
# EMAIL_TO="you@example.com"

# OneSignal Push Notifications (optional)
# Get your credentials at https://app.onesignal.com
# ONESIGNAL_APP_ID="your-onesignal-app-id"
# ONESIGNAL_REST_API_KEY="your-onesignal-rest-api-key"
# ONESIGNAL_ENABLED=true

# Frontend OneSignal Configuration
# NEXT_PUBLIC_ONESIGNAL_APP_ID="your-onesignal-app-id"

# NextAuth Configuration (optional - for user authentication)
# NEXTAUTH_URL="http://localhost:3000"
# NEXTAUTH_SECRET="your-nextauth-secret"

